<mvc:View controllerName="MyApp.controller.MyController" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <VBox>
		<f:SimpleForm
			layout="ResponsiveGridLayout"
			title="Demo" >
			<f:content>
				<Label text="{i18n>firstValue}"/>
				<Input id="value1" value="{/field1}"/>
				<Label text="{i18n>secondValue}"/>
				<Input id="value2" value="{/field2}"/>
				<Label text="{i18n>output}"/>
				<Select selectedKey="{/operator}" items="{/parent/operations}">
				   <items>
				      <core:Item key ="{id}" text="{text}"/>
				     
					</items>
				</Select>
				<Label text="Output" />
				<Text text="{/output}"/>
			</f:content>
		</f:SimpleForm>
        <Button text="Calculate" press=".calculate"/>		
    </VBox>
</mvc:View>
